# Opsera DevOps Agent - Terraform Variables Example
# Copy this file to terraform.tfvars and update values

aws_region      = "us-east-1"
environment     = "production"
app_name        = "opsera-devops-agent"
container_port  = 3847

# Task sizing (adjust based on load)
task_cpu    = 256   # 0.25 vCPU
task_memory = 512   # 512 MB

# Scaling configuration
desired_count = 2
min_count     = 1
max_count     = 10

# API Key - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -hex 32
api_key = "opsera-production-key-change-me"

# VPC Configuration
vpc_id = "vpc-008d194c7dbbb8eae"

# =============================================================================
# Route 53 / DNS Configuration (Optional but recommended)
# =============================================================================
# Set these to enable custom domain with HTTPS

# Your custom domain (e.g., mcp-agent.opsera.io)
domain_name = "mcp-agent.opsera.io"

# Route 53 Hosted Zone ID for your domain
# Find this in AWS Console: Route 53 → Hosted zones → select your zone → copy Zone ID
hosted_zone_id = "Z1234567890ABC"

# Create ACM certificate automatically (set to true when domain_name is provided)
create_certificate = true

# ALB idle timeout in seconds (increase for SSE connections)
# Default is 60s, but SSE connections need longer (300s = 5 minutes)
alb_idle_timeout = 300

# =============================================================================
# Alternative: Use existing ACM certificate
# =============================================================================
# If you already have an ACM certificate, set create_certificate = false
# and provide the ARN:
# create_certificate = false
# certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/xxxxx"
