# Backend Service Template (ClusterIP - internal only)
# Replace: {{APP_NAME}}, {{BACKEND_PORT}}

apiVersion: v1
kind: Service
metadata:
  name: {{APP_NAME}}-backend
  labels:
    app: {{APP_NAME}}-backend
    app.kubernetes.io/name: {{APP_NAME}}-backend
spec:
  type: ClusterIP
  ports:
    - port: {{BACKEND_PORT}}
      targetPort: {{BACKEND_PORT}}
      protocol: TCP
      name: http
  selector:
    app: {{APP_NAME}}-backend
