# Dev Overlay Kustomization
# Replace: {{APP_NAME}}

apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

namespace: {{APP_NAME}}

resources:
  - ../../base
  - namespace.yaml

# Image references - updated by CI/CD
images:
  - name: {{APP_NAME}}-backend
    newName: 792373136340.dkr.ecr.us-west-2.amazonaws.com/{{APP_NAME}}-backend
    newTag: latest  # backend
  - name: {{APP_NAME}}-frontend
    newName: 792373136340.dkr.ecr.us-west-2.amazonaws.com/{{APP_NAME}}-frontend
    newTag: latest  # frontend

# Environment-specific patches
patches:
  # Dev uses 1 replica
  - patch: |-
      - op: replace
        path: /spec/replicas
        value: 1
    target:
      kind: Deployment

commonLabels:
  environment: dev
